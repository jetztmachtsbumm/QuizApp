<Window x:Class="QuizApp.GamemodeSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Title="GamemodeSelection" Height="450" Width="800">
    <Grid Background="DodgerBlue">
        <Button x:Name="SingleplayerBtn" Click="SingleplayerBtn_Click" Width="200" Height="100" Background="Lime" FontSize="35" VerticalAlignment="Top" Margin="30">Singleplayer</Button>
        <Button Width="200" Height="100" Background="Orange" FontSize="35" VerticalAlignment="Center" Margin="50">Multiplayer</Button>
        <Button x:Name="BackBtn" Click="BackBtn_Click" Width="200" Height="100" Background="Red" FontSize="40" VerticalAlignment="Bottom" Margin="30">Back</Button>
    </Grid>
</Window>
