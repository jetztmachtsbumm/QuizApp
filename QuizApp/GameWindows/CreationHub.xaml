<Window x:Class="QuizApp.CreationHub"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Title="CreationHub" Height="450" Width="800">
    <Grid Background="DodgerBlue">
        <ListView x:Name="QuestionView" Width="500" Height="340" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" Background="DeepSkyBlue" FontSize="20">
            
        </ListView>
        <Button Click="AddButtonClick" Width="175" Height="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="30, 20" Background="Orange" FontSize="50">Add</Button>
        <Button x:Name="EditBtn" Click="EditBtn_Click" Width="175" Height="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="30, 140" Background="Gold" FontSize="50">Edit</Button>
        <Button x:Name="DeleteBtn" Click="DeleteBtn_Click" Width="175" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30, 60" Background="Red" FontSize="50">Delete</Button>
        <Button x:Name="BackBtn" Click="BackBtn_Click" Width="60" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20, 5" FontSize="20" Background="Orange">Back</Button>
    </Grid>
</Window>
